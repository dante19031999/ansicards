# Project related configuration options
PROJECT_NAME           = "Ansii Cards"
PROJECT_BRIEF          = "A library for working with cards in an ansii terminal."
# Path to a logo image
PROJECT_LOGO           = "resources/logo.jpeg"  
# Output directory for generated documentation
OUTPUT_DIRECTORY       = "docs"           
# Create subdirectories for output files
CREATE_SUBDIRS         = YES                   

# Input related configuration options
# Input directory for source files
INPUT                  = .                    
# File patterns to include
FILE_PATTERNS          = *.h *.cpp          
# Recursively search for files in subdirectories
RECURSIVE              = YES                    

# Build related configuration options
# Generate HTML documentation
GENERATE_HTML          = YES                    
# Output directory for HTML files
HTML_OUTPUT            = ./html                      
# Optional: Path to HTML header file
# HTML_HEADER            = ""                     
# Optional: Path to HTML footer file
# HTML_FOOTER            = ""                     
# Optional: Path to extra CSS file
# HTML_EXTRA_STYLESHEET  = ""                     

# Configuration for the generated documentation
# Generate a tree view in HTML
GENERATE_TREEVIEW      = YES                    
# Do not generate XML output
GENERATE_XML           = NO                     
# Do not generate LaTeX output
GENERATE_LATEX         = NO                     

# Other options
# Extract all entities
EXTRACT_ALL            = YES                    
# Include private members in documentation
EXTRACT_PRIVATE        = YES                    
# Include static members in documentation
EXTRACT_STATIC         = YES                    
# Use full path names in output
FULL_PATH_NAMES        = YES                    
# Strip this path from output
STRIP_FROM_PATH        = src                    

# Optional: Customization options
# Add timestamp to HTML output
HTML_TIMESTAMP         = YES                    

